upstream fest_prod_server {
  server unix:/var/www/fest_prod/shared/tmp/unicorn_sock fail_timeout=0;
}

server {
  listen 80;
  client_max_body_size 4G;
  server_name festprod;

  keepalive_timeout 5;
  root /var/www/fest_prod/current/public;
  try_files $uri @app;

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://fest_prod_server;
  }

  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root /var/www/fest_prod/current/public;
  }
}

server {
  listen 443 ssl;
  client_max_body_size 4G;
  server_name festivalfanatic.com;
  ssl_certificate ssl-bundle.crt;
  ssl_certificate_key myserver.key;
  ssl_protocols SSLv3 TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers HIGH:!aNULL:!MD5;

  keepalive_timeout 5;
  root /var/www/fest_prod/current/public;
  try_files $uri @app;

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://fest_prod_server;
  }

  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root /var/www/fest_prod/current/public;
  }
}
