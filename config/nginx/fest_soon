upstream fest_soon_server {
  server unix:/var/www/fest_soon/shared/tmp/unicorn_sock fail_timeout=0;
}

server {
  listen 80;
  client_max_body_size 4G;
  server_name festsoon;

  keepalive_timeout 5;
  root /var/www/fest_soon/current/public;
  try_files $uri @app;

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://fest_soon_server;
  }

  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root /var/www/fest_soon/current/public;
  }
}
