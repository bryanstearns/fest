<% content_for :title do %>Change your password<% end %>
<h2>Change your password</h2>

<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.alert_message "Please fix the errors below.", error_summary: false %>

  <%= f.hidden_field :reset_password_token %>
  <%= f.errors_on :reset_password_token %>

  <div class="form-inputs">
    <%= f.password_field :password, :label => "New password", :required => true, :autofocus => true %>
    <%= f.password_field :password_confirmation, :label => "Confirm your new password", :required => true %>
  </div>

  <div class="form-actions well">
    <%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
