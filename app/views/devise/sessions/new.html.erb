<% content_for :title do %>Sign in<% end %>
<h2>Sign in</h2>

<%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.text_field :email, required: false, autofocus: true, style: "width: 30em" %>
    <%= f.password_field :password, required: false, style: "width: 30em" %>
    <%= f.hidden_field :remember_me, value: true %>
    <%# f.check_box :remember_me if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions well">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<div>
  <%= render "devise/shared/links" %>
</div>

<% if flash[:alert] %>
  <p id="firstrecentvisit"><span class="attention">Important Note:</span> If this is your first
    visit to Festival Fanatic since the start of
    <strong>2013</strong>, you'll need to reset your password: please click the "Forgot your
    password?" link above and you'll get an email that will allow you to
    reset it. (If you no longer have access to the email account you used to
    register here, send a note using the Feedback link at the top of the page
    with your name and old & new email addresses, and I'll get you squared
    away quick!)</p>
<% end %>
