<%= simple_form_for(@location, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= cancel_link(locations_path) %>
    <%= destroy_button(@location) %>
  </div>
<% end %>
