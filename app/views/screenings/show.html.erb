<% cache @film do %>
  <div class="modal-header">
    <div class="title"><%= @film.name %></div>
    <p><%= safe_join([ country_names(@film.countries),
                       hours_and_minutes(@screening.duration)].compact, ", ") %></p>
  </div>
  <%= div_for(@film, class: 'modal-body screening unranked') do %>
    <%= render partial: @screening, locals: { tag: :p, show_actions: true } %>
    <% unless @other_screenings.empty? %>
      <p><%= other_screenings_caption(@screening.starts_at, @other_screenings) %></p>
      <ul>
        <%= render @other_screenings %>
      </ul>
    <% end %>
    <div class="actions">
      <div id="<%= dom_id(@film) %>_dots" class="dots"></div>
      <div id="<%= dom_id(@film) %>_stars" class="stars"></div>
      <%= ajax_progress(@film) %>
    </div>
  <% end %>
  <div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-small btn-primary">Done</button>
  </div>
<% end %>
