<%= simple_form_for([:admin, @film, @screening], html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :venue_id, collection: @venues %>
    <%= f.input :starts_at %>
    <%= f.input :press %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= cancel_link(admin_film_path(@film)) %>
    <%= destroy_button([:admin, @screening]) %>
  </div>
<% end %>
