<%= content_tag_for(:li, location) do %>
  <h3>
    <%= location.name %>
    <span class="actions">
      <%= link_to 'Edit', edit_admin_location_path(location),
                  class: "btn btn-xs btn-default" %>
      <%= link_to 'New Venue', new_admin_location_venue_path(location),
                  class: "btn btn-xs btn-default" %>
    </span>
  </h3>
  <p>
    <%= location.address.presence || "(no address)" %><br />
    Parking <%= location.parking_minutes %> minutes
  </p>
  <ul>
    <%= render location.venues %>
  </ul>
<% end %>
