<%= simple_form_for([:admin, @location], html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= cancel_link(admin_locations_path) %>
    <%= destroy_button([:admin, @location]) %>
  </div>
<% end %>
