<%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :admin %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= cancel_link(@user) %>
    <%= destroy_button(@user) %>
  </div>
<% end %>
