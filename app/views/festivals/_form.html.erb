<%= simple_form_for(@festival, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :autofocus => true %>
    <%= f.input :slug_group %>
    <%= f.input :location %>
    <%= f.input :starts_on, as: 'string' %>
    <%= f.input :ends_on, as: 'string' %>
    <%= f.input :main_url, label: 'Main URL' %>
    <%= f.input :updates_url, label: 'Updates URL' %>
    <%= f.input :public %>
    <%= f.input :scheduled %>
    <%= f.input :revised_at, as: 'string' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    &nbsp;
    <%= link_to "Cancel", @festival.new_record? ? festivals_path : festival_path(@festival) %>
  </div>
<% end %>
