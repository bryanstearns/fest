<%= simple_form_for(@festival, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :slug_group %>
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :main_url %>
    <%= f.input :updates_url %>
    <%= f.input :starts_on %>
    <%= f.input :ends_on %>
    <%= f.input :public %>
    <%= f.input :scheduled %>
    <%= f.input :revised_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
