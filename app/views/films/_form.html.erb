<%= simple_form_for(@film.new_record? ? [@festival, @film] : @film,
                    html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :duration %>
    <%= f.input :countries %>
    <%= f.input :page %>
    <%= f.input :url_fragment, label: 'URL Fragment' %>
    <%= f.input :description, input_html: { rows: 4 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= cancel_link(festival_films_path(@festival)) %>
    <%= destroy_button(@film) %>
  </div>
<% end %>
