$ ->
  $(".day .screening").on('click', ->
    screening_id = jQuery(this).attr('id').split('_')[1]

    $('body').modalmanager('loading')

    modal = $('#screening-modal')
    modal.load('/screenings/' + screening_id, '', ->
      modal.modal()
    )
  )
